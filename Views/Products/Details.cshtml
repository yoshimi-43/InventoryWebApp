@model InventoryWebApp.Models.Product
<h2>商品詳細</h2>

<div class="mb-2"><strong>ID:</strong> @Model.Id</div>
<div class="mb-2"><strong>商品名:</strong> @Model.Name</div>
<div class="mb-2"><strong>数量:</strong> @Model.Quantity</div>
<div class="mb-2"><strong>単価:</strong> @String.Format("{0:N0}", Model.Price)円</div>
<div class="mb-2"><strong>合計金額:</strong> @String.Format("{0:N0}", Model.TotalValue)円</div>

<a asp-action="Index" class="btn btn-secondary">戻る</a>
