@model InventoryWebApp.Models.Product
@{
    ViewData["Title"] = "新規登録";
}
<h2>新規商品登録</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">商品名</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">数量</label>
        <input asp-for="Quantity" class="form-control" type="number" />
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label">単価</label>
        <input asp-for="Price" class="form-control" type="number" step="1" />
    </div>

    <button type="submit" class="btn btn-primary">登録</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">戻る</a>
</form>
