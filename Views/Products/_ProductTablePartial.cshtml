@model InventoryWebApp.Models.PagedResult<InventoryWebApp.Models.Product>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th style="width:60px">ID</th>
            <th style="width:400px">商品名</th>
            <th style="width:100px">数量</th>
            <th style="width:120px">単価</th>
            <th style="width:140px">合計金額</th>
            <th style="width:150px">操作</th>
        </tr>
    </thead>
    <tbody>

    @if (!Model.Items.Any())
    {
        <tr><td colspan="6" class="text-center">該当データがありません</td></tr>
    }
    else
    {
        foreach (var p in Model.Items)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td style="text-align: right;">@p.Quantity</td>
                <td style="text-align: right;">@String.Format("{0:N0}", p.Price)</td>
                <td style="text-align: right;">@String.Format("{0:N0}", p.TotalValue)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning">編集</a>
                    <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-info">詳細</a>
                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger">削除</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>

<!-- ページネーション（単純） -->
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @{
            var page = Model.Page;
            var totalPages = Model.TotalPages;
            var start = System.Math.Max(1, page - 2);
            var end = System.Math.Min(totalPages, page + 2);
        }

        <li class="page-item @(page == 1 ? "disabled" : "")">
            <a class="page-link paging-link" href="#" data-page="@(page - 1)">前へ</a>
        </li>

        @for (int i = start; i <= end; i++)
        {
            <li class="page-item @(i == page ? "active" : "")">
                <a class="page-link paging-link" href="#" data-page="@i">@i</a>
            </li>
        }

        <li class="page-item @(page >= totalPages ? "disabled" : "")">
            <a class="page-link paging-link" href="#" data-page="@(page + 1)">次へ</a>
        </li>
    </ul>
</nav>
