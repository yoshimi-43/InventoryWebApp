@model IEnumerable<InventoryWebApp.Models.Product>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>商品名</th>
            <th>数量</th>
            <th>単価</th>
            <th>合計金額</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>@p.Quantity</td>
                <td>@p.Price.ToString("N0")円</td>
                <td>@p.TotalValue.ToString("N0")円</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning">編集</a>
                    <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-info">詳細</a>
                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger">削除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
