@model InventoryWebApp.Models.Product

@{
    ViewData["Title"] = "商品編集";
}

<h2>商品編集</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-2">
        <label asp-for="Name">商品名</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Quantity">数量</label>
        <input asp-for="Quantity" class="form-control" id="quantityInput" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Price">単価</label>
        <input asp-for="Price" class="form-control" id="priceInput" />円
    </div>

    <div class="form-group mb-2">
        <label>合計金額</label>
        <input type="text" class="form-control" id="totalValue" readonly value="@Model.TotalValue" />円
    </div>

    <button type="submit" class="btn btn-primary">更新</button>
    <a asp-action="Index" class="btn btn-secondary">戻る</a>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function updateTotal() {
            const qty = parseInt($("#quantityInput").val()) || 0;
            const price = parseInt($("#priceInput").val()) || 0;
            $("#totalValue").val((qty * price));
        }

        $("#quantityInput, #priceInput").on("input", updateTotal);
    </script>
}
