@model InventoryWebApp.Models.Product
<h2>商品編集</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <label>商品名:</label>
    <input asp-for="Name" /><br />
    <label>数量:</label>
    <input asp-for="Quantity" /><br />
    <label>単価:</label>
    <input asp-for="Price" />円<br />
    <p>合計金額: @((Model.Quantity * Model.Price).ToString("N0"))円</p>
    <button type="submit">更新</button>
</form>
<a asp-action="Index">戻る</a>
